<h1><%= @user.name %>のトレーニングメニュー</h1>
<div class="weekly-menu-container">
  <% 7.times do |i| %>
    <div class="daily-menu-container">
      <%= "日付：#{Date.today - 3 + i}" %>
      <% day = (Date.today + i - 3).wday %>
      <%= "(#{Wday.find(day).name})" %>
      <% if @hiit_for_user.any? %>
        <% @hiit_for_user.each do |hiit_for_user| %>
          <% if HiitDate.exists?(hiit_id: hiit_for_user.id, date: day) %>
            <div>
              <%= hiit_for_user.name %>
              <% if UserHiit.exists?(hiit_id: hiit_for_user.id, user_id: @user.id, done_dates: Date.today) %>
                実施済み
              <% else %>
                未実施
              <% end %>
            </div>
          <% end %>
        <% end %>
      <% end %>
      <% if i == 3 %>
        <div>
          <%= link_to "今日の予定を見る", user_user_hiits_path(@user) %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
<% if current_user.admin? %>
<div><%= link_to "#{@user.name}を削除する", user_path(@user), method: :delete %></div>
<div><%= link_to "チームのページに戻る", team_path(@team) %></div>
<% end %>