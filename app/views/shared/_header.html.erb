<div class="header-logo">
  <%= link_to "HiitApp", root_path %>
</div>
<div class="header-side-menu">
  <!--ユーザーがログインしているかどうかで表示内容を変更-->
  <% unless user_signed_in? %>
  <!--ログインしていない場合-->
    <%= link_to "チームを登録する", new_team_path %>
    <%= link_to "ユーザーを登録する", new_user_registration_path %>
    <%= link_to "ログインする", new_user_session_path %>
  <!--ログインしている場合の表示-->
  <% else %>
    <div class="team-user-container">
      <div class="team">
        <%= link_to current_user.team.name, team_path(current_user.team) %>
      </div>
      <div class="user">
        <%= link_to current_user.name, user_path(current_user) %>
      </div>
      <div class="logout">
        <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
      </div>
    </div>
    <div class="group">
      <% if current_user.user_groups.any? %>
        <% current_user.user_groups.each do |user_group| %>
          <%= link_to user_group.group.name, "#" %>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>