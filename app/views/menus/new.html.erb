<main>
  <div class="text-center alert alert-secondary rounded-0 border-0 fs-2">新しいメニューの作成ページです</div>
  <%= render "shared/error_messages", model: @menu %>
  <div class="menu-detail">
    <%= form_with model: @menu, local: true do |f| %>
    <div class="form-group">
      <%= f.label :name, "メニューの名前" %>
      <%= f.text_field :name, class:"form-control" %>
    </div>
    <div class="form-title form-group">
      <%= f.label :icon, "メニューのアイコン" %>
      <%= f.file_field :icon, class:"form-control" %>
    </div>
    <div class="d-flex justify-content-center" id="preview-container">
    </div>
    <div class="form-title form-group">
      <%= f.label :text, "メニューの説明文" %>
      <%= f.text_area :text, class:"form-control" %>
    </div>

    <div class="form-group">
      <%= f.submit "メニューを登録する", class:"form-control btn bg-light" %>
      <button class="form-control btn bg-light"><%= link_to "チームのページに戻る", team_path(current_user.team), class:"btn mb-0 p-0" %></button>
    </div>
    <% end %>
  </div>
</main>