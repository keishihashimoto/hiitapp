<main>
  <%= render "shared/error_messages", model: @hiit_menu_hiit %>
  <div class="menu-detail">
    <%= form_with model: @hiit_menu_hiit, url: "/hiits/#{@hiit.id}", method: :patch, local: true do |f| %>
    <div>
      <%= f.label "HIITの名前",:name %>
      <%= f.text_field :name %>
    </div>
    <div>
      <%= f.label "ひと種目あたりの時間",:active_time %><i>(「（半角数字）秒」または「（半角数字）分」という形で入力してください)</i>
      <%= f.text_field :active_time %>
    </div>
    <div>
      <%= f.label "休憩時間",:rest_time %><i>(「（半角数字）秒」または「（半角数字）分」という形で入力してください)</i>
      <%= f.text_field :rest_time %>
    </div>
    <div>
      <%= f.label "実施日",:date %><i>(このHIITを実施する曜日に全てチェックを入れてください)</i><br>
      <div class="day-container">
      <%= f.collection_check_boxes(:date, Wday.all, :id, :name, include_hidden: false, name: "hiit_menu_hiit[date][]") %>
      </div>
    </div>
    <div>
      <% 8.times do |i| %>
        <div>
          <%= "#{i + 1}番目の種目" %><select name="hiit_menu_hiit[menu_ids][]">
            <option value="0">---</option>
            <% current_user.team.menus.each do |menu| %>
              <option value='<%= "#{menu.id}" %>'><%= menu.name %></option>
            <% end %>
          </select>
        </div>
      <% end %>
    </div>
    <div>
      <%= f.submit "HIITを編集する" %>
      <div>
        <%= link_to "HIITのページに戻る", hiit_path(@hiit) %>
        <%= link_to "チームのページに戻る", team_path(current_user.team) %>
      </div>
    </div>
    <% end %>
  </div>
</main>